{
  "name": "hero-hq",
  "private": true,
  "version": "0.1.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "tauri": "tauri",
    "prepare": "husky install",
    "make-pretty": "npx prettier --write --ignore-unknown .",
    "lint": "npx eslint src",
    "hq": "tauri dev",
    "kevin": "cp -r src-tauri/target/release/bundle/msi Z:/",
    "dist": "rm -rf src-tauri/target/release/bundle/msi && pnpm tauri build",
    "pineapple": "pnpm dist && pnpm kevin"
  },
  "dependencies": {
    "@lottiefiles/react-lottie-player": "^3.5.0",
    "@tauri-apps/api": "^1.2.0",
    "@typescript-eslint/eslint-plugin": "^5.46.0",
    "@typescript-eslint/parser": "^5.46.0",
    "classnames": "^2.3.2",
    "eslint": "^8.29.0",
    "preact": "^10.11.3",
    "tauri-plugin-store-api": "github:tauri-apps/tauri-plugin-store"
  },
  "devDependencies": {
    "@babel/core": "^7.20.5",
    "@preact/preset-vite": "^2.4.0",
    "@tauri-apps/cli": "^1.2.2",
    "@types/node": "^18.11.12",
    "husky": "^8.0.2",
    "lint-staged": "^13.1.0",
    "prettier": "^2.8.1",
    "typescript": "^4.9.4",
    "vite": "^3.2.5"
  },
  "lint-staged": {
    "**/*": "prettier --write --ignore-unknown"
  }
}
